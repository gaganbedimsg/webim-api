	public void offline() {
		
	}
		
	public void publish(Status status) {
		
	}
	
	public void publish(Presence presence) {
		
	}
	
	public void publish(Message message) {
		
	}
	
	private String apiurl(String path) {
		if(!path.startsWith("/")) {
			path = "/" + path;
		}
		String url = "http://" + this.domain + ":" + port + path; 
		
	}

}
